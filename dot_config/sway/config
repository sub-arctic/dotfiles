### Startup
exec {
    autotiling
    pipewire
    udiskie
    /usr/libexec/xfce-polkit
    pgrep mpd || mpd
    sway-audio-idle-inhibit
    dunst
    gsettings set org.gnome.desktop.interface {
        gtk-theme "everforest-gtk"
        font-name "Mononoki Nerd Font 12"
        cursor-theme "everforest-cursors"
        cursor-size '24'
    }
    wlsunset -l -33.9 -L 151.2
    swayidle -w timeout 300 'swaylock -f -i ~/.config/wallpaper.png' timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' before-sleep 'swaylock -f -i ~/.config/wallpaper.png'
}

### Variables
set {
    $mod Mod4
    $left h
    $down j
    $up k
    $right l
    $term foot 
    $drun tofi-drun | xargs swaymsg exec --
    $ss_path "~/pictures/screenshots"
    $laptop eDP-1
}

### General configuration
# Window rules
for_window {
    [con_mark="swapmark"] opacity set 50
    [con_mark="swapmark"] title_format "<b>ó°„³</b> Marked"
}
smart_borders on
smart_gaps on
show_marks yes
gaps inner 5
font pango:Mononoki Nerd Font 12

### Output configuration
output {
    * bg ~/.config/wallpaper.png fill
    DP-1 resolution 1920x1080 position 0,365
    HDMI-A-1 resolution 1920x1080 position 1920,0 transform 90
}

### Clamshell mode
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

### Gestures
# Workspace Swiping
bindgesture swipe:3:right workspace prev
bindgesture swipe:3:left workspace next

### General bindings
floating_modifier $mod normal

bindsym {
    #
    # General 
    #
        # Start a terminal
        $mod+Return exec $term

        # Kill focused window
        $mod+Shift+q kill

        # Start your launcher
        $mod+d exec $drun

        # Lock the screen
        $mod+x exec swaylock -i ~/.config/wallpaper.png

        # Reload the configuration file
        $mod+Shift+c reload

        # Exit sway (logs you out of your Wayland session)
        $mod+Shift+e exec swaynag -t urgent -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

    #
    # Misc. scripts
    #
        # Tesseract
        $mod+o exec ~/.local/bin/ocr

        # Screenshot
        # Print exec grim ~/pictures/screenshots/$(date +'%s_grim_alloutputs.png') && dunstify "Screenshot Captured!"
        
        # Launch neovim in notetaking mode
        $mod+n exec ~/dev/scripts/notes

    #
    # Layout
    #   
        # You can "split" the current object of your focus with
        # $mod+b or $mod+v, for horizontal and vertical splits
        # respectively.
        $mod+b splith
        $mod+v splitv

        # Switch the current container between different layout styles
        $mod+s layout stacking
        $mod+w layout tabbed
        $mod+e layout toggle split

        # Make the current focus fullscreen
        $mod+f fullscreen

        # Toggle the current focus between tiling and floating mode
        $mod+Shift+space floating toggle

        # Swap focus between the tiling area and the floating area
        $mod+space focus mode_toggle

        # Move focus to the parent container
        $mod+a focus parent
    #
    # Scratchpad
    #
        # The scratchpad is like a holding place for windows
        # Move the currently focused window to the scratchpad
        $mod+Shift+minus move scratchpad

        # Show the next scratchpad window or hide the focused scratchpad window.
        # If there are multiple scratchpad windows, this command cycles through them.
        $mod+minus scratchpad show

    #
    # Modes
    #
        $mod+p mode "screenshot"
        $mod+m mode "marks"
        $mod+r mode "resize"

    #
    # Movement
    #
        # Windows
        # Move your focus around
        $mod+$left focus left
        $mod+$down focus down
        $mod+$up focus up
        $mod+$right focus right
        # Or use $mod+[up|down|left|right]
        $mod+Left focus left
        $mod+Down focus down
        $mod+Up focus up
        $mod+Right focus right
        # Move the focused window with the same, but add Shift
        $mod+Shift+$left move left
        $mod+Shift+$down move down
        $mod+Shift+$up move up
        $mod+Shift+$right move right
        # Ditto, with arrow keys
        $mod+Shift+Left move left
        $mod+Shift+Down move down
        $mod+Shift+Up move up
        $mod+Shift+Right move right

        # Workspaces
        # Switch to workspace
        $mod+1 workspace number 1
        $mod+2 workspace number 2
        $mod+3 workspace number 3
        $mod+4 workspace number 4
        $mod+5 workspace number 5
        $mod+6 workspace number 6
        $mod+7 workspace number 7
        $mod+8 workspace number 8
        $mod+9 workspace number 9
        $mod+0 workspace number 10
        # Move focused container to workspace
        $mod+Shift+1 move container to workspace number 1
        $mod+Shift+2 move container to workspace number 2
        $mod+Shift+3 move container to workspace number 3
        $mod+Shift+4 move container to workspace number 4
        $mod+Shift+5 move container to workspace number 5
        $mod+Shift+6 move container to workspace number 6
        $mod+Shift+7 move container to workspace number 7
        $mod+Shift+8 move container to workspace number 8
        $mod+Shift+9 move container to workspace number 9
        $mod+Shift+0 move container to workspace number 10
}


# Locked (repeated when held)
bindsym --locked {
    # Volume
    XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && ~/.local/bin/volbright mute
    XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && ~/.local/bin/volbright volume
    XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && ~/.local/bin/volbright volume
    XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

    # Brightness
    XF86MonBrightnessUp exec brightnessctl s 5%+ && ~/.local/bin/volbright brightness 
    XF86MonBrightnessDown exec brightnessctl s 5%- && ~/.local/bin/volbright brightness
}


### Modes
mode {
    "screenshot" {
        bindsym {
            # Capture all outputs
            1 exec grim $ss_dir/$(date +'%s_grim_alloutputs.png') && dunstify "Screenshot Captured!"
            # Capture selected region
            2 exec grim -g "$(slurp)" $ss_dir/(date +'%s_grim.png') dunstify "Screenshot Captured!"
            # Capture focused window
            3 exec grim -g "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" $ss_dir/$(date +'%s_grim_window.png') dunstify "Screenshot Captured!"
        
            # Return to default mode
            Escape mode "default"
            Return mode "default"
        }
    }
    "togglemarks" {
        bindsym {
            # Assign marks
            0 mark --toggle 0
            1 mark --toggle 1
            2 mark --toggle 2
            3 mark --toggle 3
            4 mark --toggle 4
            5 mark --toggle 5
            6 mark --toggle 6
            7 mark --toggle 7
            8 mark --toggle 8
            9 mark --toggle 9
            
            # Return to default
            Return mode "marks"
            Escape mode "default"; unmark
            s mode "swapmarks"
        }
    }

    "swapmarks" {
        bindsym {
            # Swap marks
            0 swap container with mark 0
            1 swap container with mark 1 
            2 swap container with mark 2
            3 swap container with mark 3
            4 swap container with mark 4
            5 swap container with mark 5
            6 swap container with mark 6
            7 swap container with mark 7
            8 swap container with mark 8
            9 swap container with mark 9

            # Return to default
            Return mode "marks"
            Escape mode "marks"
            t mode "togglemarks"
        }
    }
    "marks" {
        bindsym {
            t mode "togglemarks"
            s mode "swapmarks"
            Return mode "default"; unmark
            Escape mode "default"; unmark
        }
    }

    "resize" {
        # left will shrink the containers width
        # right will grow the containers width
        # up will shrink the containers height
        # down will grow the containers height
        bindsym {
            $left resize shrink width 10px
            $down resize grow height 10px
            $up resize shrink height 10px
            $right resize grow width 10px

            # Ditto, with arrow keys
            Left resize shrink width 10px
            Down resize grow height 10px
            Up resize shrink height 10px
            Right resize grow width 10px

            # Return to default mode
            Return mode "default"
            Escape mode "default"
        }
    }
}

