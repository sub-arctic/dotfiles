[
    {{ if eq .chezmoi.hostname "tumbletop" }}
    {
	"layer": "top",
	"position": "top",
	"ipc": true,
	"output": ["DP-1"],

	"include": [
	    "~/.config/waybar/modules.json"
	],

	"modules-left": [
	    "sway/workspaces",
	    "hyprland/workspaces",
	    "sway/scratchpad",
	    "sway/mode",
	    "custom/seperator#l1",
	    "clock",
	    "custom/seperator#l2",
	    "cpu",
	    "memory",
	    "temperature",
	    "custom/seperator#l3"
	],
	"modules-center": [
	    
	    "custom/seperator#c0",
	    "mpris",
	    "custom/seperator#c1"
	],
	"modules-right": [
	    "custom/seperator#r0",
	    "custom/theme-switcher",
	    "idle_inhibitor", 
	    "custom/seperator#r1",
	    "wireplumber", 
	    "custom/seperator#r2",
	    "network", 
	    "network#vpn",
	    "tray"
	]
    },
    {
	"layer": "top",
	"position": "top",
	"ipc": true,
	"output": ["HDMI-A-1"],

	"include": [
	    "~/.config/waybar/modules.json"
	],

	"modules-left": [
	    "sway/workspaces",
	    "hyprland/workspaces",
	    "sway/scratchpad",
	    "sway/mode",
	    "custom/seperator#l1",
	    "clock",
	    "custom/seperator#l2",
	    "cpu",
	    "memory",
	    "temperature",
	    "custom/seperator#l3"
	],
	"modules-center": [
	],
	"modules-right": [
	]
    }
    {{ else }}
    {
	"layer": "top",
	"position": "bottom",
	"ipc": true,

	"include": [
	    "~/.config/waybar/modules.json"
	],

	"modules-left": [
	    "sway/workspaces",
	    "hyprland/workspaces",
	    "sway/scratchpad",
	    "sway/mode",
	    "custom/seperator#l1",
	    "clock",
	    "custom/seperator#l2",
	    "group/hardware",
	    "custom/seperator#l3",
	],
	"modules-right": [
	    "custom/seperator#r0",
	    "custom/theme-switcher",
	    "custom/xbps-updates",
	    "idle_inhibitor",
	    "custom/seperator#r1",
	    "wireplumber",
	    "backlight",
	    "custom/seperator#r2",
	    "battery",
	    "bluetooth",
	    "custom/seperator#r3",
	    "network" 
	    "network#vpn",
	    "tray"
	]
    },
    {{ end }}
]
